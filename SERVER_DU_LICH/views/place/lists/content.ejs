<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> Data</h4>
      <div class="card">
        <h5 class="card-header">Table Users</h5>
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>name</th>
                <th>description</th>
                <th>address</th>
                <th>City</th>
                <th>image</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody class="table-border-bottom-0">
              <% Places.forEach(place=> { %>
                <tr>
                  <td><i class="fab fa-react fa-lg text-info me-3"></i> <strong><%= place.id %></strong></td>
                  <td><%= place.name %></td>
                  <td><%= place.description %></td>
                  <td><%= place.address %></td>
                  <td><%= place.cityID %> : <%= place.city.name %></td>
                  <td><img src="/photos/<%= place.image %>" style="width: 20%; height: auto;" alt=""></td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" onclick="clickUpdate('<%= place.id%>',this)" href="javascript:void(0);"><i class="bx bx-edit-alt me-2"></i>
                          Edit</a>
                          <a class="dropdown-item" onclick="clickComment('<%= place.id%>',this)" href="javascript:void(0);"><i class="bx bx-edit-alt me-2"></i>
                           List Comment</a>
                            <a class="dropdown-item" onclick="clickTravel('<%= place.id%>',this)" href="javascript:void(0);"><i class="bx bx-edit-alt me-2"></i>
                          List Travel Event</a>
                          <a class="dropdown-item" onclick="clickVote('<%= place.id%>',this)" href="javascript:void(0);"><i class="bx bx-edit-alt me-2"></i>
                            List Vote</a>
                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-2"></i>
                          Delete</a>
                      </div>
                    </div>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="content-backdrop fade"></div>
  </div>
  <script>
    const clickUpdate = (id, data) => {
      data.href = 'update/' + id;
    }
    const clickComment=(id,data)=>{
      data.href = '/comment/places/' + id;
    }
    const clickTravel=(id,data)=>{
      data.href = '/travelEvent/places/' + id;
    }
    const clickVote=(id,data)=>{
      data.href = '/vote/places/' + id;
    }
  </script>